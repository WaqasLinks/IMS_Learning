@model IEnumerable<IMSRepo.Models.SOD>

@{
  ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <tr>
    <th>Id</th>
    <th>
      @Html.DisplayNameFor(model => model.ItemTotal)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.SODate)
    </th>
    
    <th>
      @Html.DisplayNameFor(model => model.Product.Name)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
<tr>
  <td>
    @Html.DisplayFor(modelItem => item.Id)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.ItemTotal)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.SODate)
    @*<input id="myDate" type="text" />*@
  </td>
 
  <td>
    @Html.DisplayFor(modelItem => item.Product.Name)
  </td>
  <td>
    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
  </td>
</tr>
  }

</table>
